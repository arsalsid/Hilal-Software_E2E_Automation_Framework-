{
  "name": "hilal_software-automation_framework",
  "version": "1.0.0",
  "description": "Cypress end to end automation framework",
  "main": "index.js",
  "scripts": {
    "test:ui": "cypress open --browser chrome",
    "test:headless": "cypress run --browser chrome",
    "generate:report": "mochawesome-merge cypress/reports/*.json | mochawesome-report-generator --reportDir cypress/final-report",
    "test:edge": "cypress run --browser edge",
    "test:firefox": "cypress run --browser firefox"
  },
  "devDependencies": {
    "cypress": "^14.3.3",
    "cypress-mochawesome-reporter": "^3.8.2",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.2.0"
  }
}
